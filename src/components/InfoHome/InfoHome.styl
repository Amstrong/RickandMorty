body
    background-color:black

.container
    display: grid
    align-items: center
    justify-items: center
    grid-template-columns: 1fr 1fr
    height: 100vh
    color: white
    border: 0

.container__elements
    display:grid
    justify-items: center

.photo__img
    width:400px
    height:400px

.btn--start
    width:340px
    height:50px
    font-size:18px
    background-color: #00D606
    border: 0
    border-radius: 5px
    color:white
    cursor: pointer

.btn--start:hover   
    opacity: 0.7

h1
    font-size:65px
    margin: 0

.text--subtitle
    font-size: 45px  
    margin: 0 0 10px 0

