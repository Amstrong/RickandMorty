body
    background-color:black
    font-family: 'Jost', sans-serif;

.container
    display: grid
    align-items: center
    justify-items: center
    grid-template-columns: 1fr 1fr
    height: 100vh
    color: white
    border: 0

.container__elements
    display:grid
    justify-items: center

.photo__img
    width:400px
    height:400px

.btn--start
    font-family: 'Jost', sans-serif;
    width:340px
    height:50px
    font-size:20px
    background-color: #00D606
    border: 0
    border-radius: 5px
    color:white
    cursor: pointer

.btn--start:hover   
    opacity: 0.7

.text--title
    font-weight:500
    font-size:50px    

.text--subtitle
    font-size: 35px  
    font-weight:300
    margin: 0 0 10px 0

