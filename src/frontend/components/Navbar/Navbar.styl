@media (min-width: 769px)
    .container__navbar
        position: -webkit-sticky;
        position: sticky;
        z-index:4
        top: 0;
        display:grid
        grid-template-columns: 1fr 1fr
        width:100%
        height:70px
        background-color: #181818

    .container__logo
        display:grid
        align-items:center
        justify-items:start

    .logo-navbar
        margin-left:30px
        width:140px
        height:45px
        cursor:pointer

    .container__filters
        display: flex
        white-space: nowrap
        justify-content: space-evenly
        align-items:center
        cursor:pointer

    .filters
        color:white

    .filter-select
        color:blue

    .filters:hover
        color: #00B3CB
    .filtersPrueba
        color:red

@media (max-width: 768px)
  .container__navbar
        position: -webkit-sticky;
        position: sticky;
        z-index:4
        display:grid
        margin:0
        grid-template-rows: 1fr 1fr
        width:100%
        height:100px
        background-color: #181818
        padding: 0

    .container__logo
        display:grid
        align-items:center
        justify-items:center

    .logo-navbar
        margin-top:15px
        margin-left:30px
        width:140px
        height:45px
        cursor:pointer

    .container__filters
        display: flex
        white-space: nowrap
        justify-content: space-evenly
        align-items:center
        cursor:pointer

    .filters
        color:white
